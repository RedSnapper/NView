<!DOCTYPE fieldset>
<fieldset  xmlns="http://www.w3.org/1999/xhtml" class="siso__fieldset">
	<input type="hidden" data-xp="_ident" />
	<ul class="siso__formlet">
		<li>
			<label class="siso__control" data-semantic="field" data-xp="comment">
				<span class="siso__label" data-xp="label" data-tr="prompt_emailaddress" />
				<div class="siso__flex"><input class="siso__input" autocomplete="on" type="email" name="email" /></div>
				<span class="siso__error" data-msg="email" />
			</label>
		</li>
	</ul>
	<div data-xp="siso__captcha" />
	<ul class="siso__btns">
		<li>
			<label class="siso__button" data-semantic="field" data-xp="button">
				<button class="siso__btn--primary" type="submit" name="_fn" value="save" data-tr="button_resetpassword" />
			</label>
		</li>
	</ul>
</fieldset>
